script/source = "extends CharacterBody2D

const NORMAL_SPEED = 200
const DASH_SPEED = 550
const DASH_LENGTH = 0.1
const GRAVITY = 1200
const JUMP_VELOCITY = -300

var facing_vector: Vector2 = Vector2.RIGHT  # Default facing direction

@onready var dash = $dash  # Reference to your dash controller node
@onready var animated_sprite: AnimatedSprite2D = $AnimatedSprite2D
@onready var dash_cooldown: Timer = $dashCoolDown


func _physics_process(delta: float) -> void:
	animated_sprite.play(\"idle\")
	# Input directions
	var x_direction := Input.get_axis(\"move_left\", \"move_right\")

	# Update facing direction if there's input
	if x_direction != 0:
		facing_vector = Vector2(x_direction, 0).normalized()
		animated_sprite.play(\"move\")
		if x_direction != 0:
			animated_sprite.flip_h = x_direction < 0
	
	# Gravity
	if not is_on_floor():
		velocity.y += GRAVITY * delta
		animated_sprite.play(\"jump\")
		
	else:
		velocity.y = 0 # Stop downward movement
	
	# Jump
	if Input.is_action_just_pressed(\"jump\") and is_on_floor():
		velocity.y = JUMP_VELOCITY
	
	# Dash trigger
	if Input.is_action_just_pressed(\"dash\") and dash_cooldown.is_stopped():
		dash.start_dash(DASH_LENGTH)
		dash_cooldown.start()

	# Choose speed based on dash state
	var speed := DASH_SPEED if dash.is_dashing() else NORMAL_SPEED

	# Apply movement
	#if x_direction != 0:
	#	animated_sprite.play(\"move\")
	#	if x_direction != 0:
	#		animated_sprite.flip_h = x_direction < 0
	#else:
	
	

	velocity.x = x_direction * speed if x_direction != 0 else move_toward(velocity.x, 0, speed)
	move_and_slide()
"

